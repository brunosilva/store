<tr>
  <th scope="row"><%= stock.id %></th>
  <td><%= stock.product.name %></td>
  <td><%= stock.quantity %></td>
  <td style="width: 10%;"><%= l stock.entry_date, format: :long %></td>
  <td style="display: flex;">
    <%= link_to  '<i class="bi bi-pencil-square"></i>'.html_safe, edit_stock_path(stock), class: 'btn btn-info mx-1' %>
    <%= button_to raw('<i class="bi bi-trash"></i>'), @stock, method: :delete, class: 'btn btn-danger mx-1' %>
  </td>
</tr>
