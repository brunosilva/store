<tr>
  <th scope="row"><%= product.id %></th>
  <td><%= product.name %> - <%= truncate(product.description, length: 30) %></td>
  <td><%= product.price %></td>
  <td style="width: 10%;"><%= product.brand %></td>
  <td style="display: flex;">
    <%= link_to  '<i class="bi bi-pencil-square"></i>'.html_safe, edit_product_path(product), class: 'btn btn-info mx-1' %>
    <%= button_to raw('<i class="bi bi-trash"></i>'), @product, method: :delete, class: 'btn btn-danger mx-1' %>
  </td>
</tr>
